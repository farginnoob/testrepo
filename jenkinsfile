pipeline {
    agent { 
        node {
            label 'docker-agent-inbound'
            }
      }
      triggers {
          pollSCM 'H/3 * * * *'
      }
    stages {
        stage('Build') {
            steps {
                echo "Building..."
                sh '''
                echo "doing build stuff..."
                '''
                bash helloworld.sh
            }
        }
        stage('Test') {
            steps {
                echo "Testing..."
                sh '''
                echo "doing test stuff..."
                '''
            }
        }
        stage('Deliver') {
            steps {
                echo 'Deliver...'
                sh '''
                echo "doing delivery stuff..."
                '''
            }
        }
    }
}
